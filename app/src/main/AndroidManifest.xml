<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kevinwalker.parkit">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.location.gps" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_car_launcher_two"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_car_launcher_two"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- <meta-data android:name="com.google.android.geo.API_KEY" android:value="AIzaSyAn7kfl181phm9DgmEpUsajwJGzdw1Pj0k"/> -->
        <meta-data
            android:name="https://www.googleapis.com/geolocation/v1/geolocate"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".users.UserActivity" />
        <activity android:name=".spot.SpotActivity" />
        <activity android:name=".maps.MapsActivity" />
        <activity
            android:name=".authentication.Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".authentication.Registration" />
        <activity android:name=".authentication.ForgotPassword" />
        <activity
            android:name=".NavDrawer"
            android:label="@string/title_activity_nav_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".profiles.ParentProfile" />
        <activity
            android:name=".vehicle.VehicleProfileActivity"
            android:label="@string/title_activity_vehicle_profile"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>