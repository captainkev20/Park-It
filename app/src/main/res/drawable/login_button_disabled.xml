<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <stroke android:width="4dip" android:color="@color/colorDisabledLoginButton" />
            <gradient android:angle="-90" android:startColor="@color/colorDisabledLoginButton" android:endColor="@color/colorDisabledLoginButton"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <stroke android:width="1dip" android:color="@color/colorDisabledLoginButton" />
            <solid android:color="@color/colorDisabledLoginButton"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <stroke android:width="1dip" android:color="@color/colorDisabledLoginButton" />
            <gradient android:angle="-90" android:startColor="@color/colorDisabledLoginButton" android:endColor="@color/colorDisabledLoginButton" />
        </shape>
    </item>
</selector>