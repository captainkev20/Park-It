<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"/>

    <Button
        android:id="@+id/btn_park"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/park_button"
        android:elevation="1dp"
        android:enabled="false"
        android:text="@string/Park"
        android:textColor="@color/common_google_signin_btn_text_light" />

    <Button
        android:id="@+id/btn_leave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/leave_button"
        android:elevation="1dp"
        android:enabled="false"
        android:text="@string/Leave"
        android:textColor="@color/common_google_signin_btn_text_light" />

    <!--<fragment-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/map"-->
        <!--android:name="com.google.android.gms.maps.SupportMapFragment" />-->


    <!--<FrameLayout-->
        <!--android:id="@+id/map_container"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"></FrameLayout>-->

    <Button
        android:id="@+id/btn_find_user_parked"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="155dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/find_user_button"
        android:elevation="1dp"
        android:text="@string/find_me"
        android:textColor="@android:color/white" />
</RelativeLayout>